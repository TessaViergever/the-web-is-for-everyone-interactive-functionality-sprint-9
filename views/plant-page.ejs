<%- include('./partials/head.ejs') %>

<div class="plantenlijst-wrapper">
  <h1>Plantenlijst</h1>
  <h2></h2>
  <p> Hieronder zie je een overzicht van alle planten die momenteel beschikbaar zijn in de stekjesbieb. Je kunt een plantje reserveren. 
    Ook kun je zelf een plantje toevoegen.</p>

  <div class="wrapper-stekjes">
    <% stekjes.forEach(stekjes=> { %>
    <article class="stekjes">
      <h3><%= stekjes.naam %></h3>
      <p><%= stekjes.aanmelddatum %></p>
      <img src="/images/afbeeldingen-rechtenvrij/placeholder.jpeg">
      <button class="btn2">Reserveer</button>
    </article>
    <% }) %>

    <article class="jouw-stekje">
      <h3>Jouw plantje hier?</h3>
      <img href="/plantenlijst/nieuw-stekje-toevoegen" src="/images/afbeeldingen-rechtenvrij/placeholder.jpeg" alt="Jouw plantje hier?">
      <a href="/plantenlijst/nieuw-stekje-toevoegen"><button class="btn1">Toevoegen</button></a>
    </article>
  </div>
</div>

  <%- include('./partials/foot.ejs') %>

